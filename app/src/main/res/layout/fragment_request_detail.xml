<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.RequestDetailFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/hotel_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Phone"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/hotel_phone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Email"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/hotel_email"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Address"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/hotel_address"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant PinCode"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/hotel_pin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Menu"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_list_recycler_view"
            />
    </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/approve"
            android:text="Approve"
            android:background="#81C784"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_margin="10sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reject"
            android:background="#FF8A65"
            android:text="Reject"
            android:textColor="#FFFFFF"
            android:layout_margin="10sp"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>